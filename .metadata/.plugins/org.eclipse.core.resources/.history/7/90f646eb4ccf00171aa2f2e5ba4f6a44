#ifndef USART_IO_H_
#define USART_IO_H_

#include "stm32f10x.h"
#include "stm32f10x_rcc.h"
#include "stm32f10x_gpio.h"
#include "stm32f10x_usart.h"

void uio_puts_sync(USART_TypeDef dev, const char *str)
{
	char *p = str;
	for(;*p; ++p)
	{
		USART_SendData(dev, *p);
		if(USART_GetFlagStatus(dev, USART_FLAG_TXE) == RESET)
	}
}



#endif /* USART_IO_H_ */
